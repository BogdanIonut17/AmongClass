@model AmongClass.Models.Question

@{
    ViewData["Title"] = ViewBag.Question.Text;
}

<style>
    .show-container {
        max-width: 1000px;
        margin: 2rem auto;
        padding: 0 1rem;
    }

    .question-header {
        background: linear-gradient(135deg, #1e293b 0%, #334155 100%);
        border: 2px solid #3b82f6;
        border-left: 5px solid #3b82f6;
        border-radius: 12px;
        padding: 2rem;
        margin-bottom: 3rem;
        box-shadow: 0 5px 20px rgba(59, 130, 246, 0.2);
    }

    .question-title {
        color: #f1f5f9;
        font-size: 2rem;
        font-weight: 700;
        margin: 0;
        display: flex;
        align-items: flex-start;
        gap: 0.75rem;
    }

        .question-title i {
            color: #60a5fa;
            margin-top: 0.25rem;
        }

    .section-header {
        color: #cbd5e1;
        font-size: 1.5rem;
        font-weight: 600;
        margin: 2rem 0 1.5rem 0;
        padding-bottom: 0.75rem;
        border-bottom: 2px solid #334155;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

        .section-header i {
            color: #10b981;
        }

    .answer-item {
        background: #1e293b;
        border: 2px solid #334155;
        border-radius: 12px;
        padding: 1.75rem;
        margin-bottom: 1.5rem;
        transition: all 0.3s ease;
    }

        .answer-item:hover {
            border-color: #3b82f6;
            box-shadow: 0 5px 20px rgba(59, 130, 246, 0.15);
            transform: translateY(-2px);
        }

    .answer-text {
        color: #e2e8f0;
        font-size: 1.05rem;
        line-height: 1.7;
        margin-bottom: 1.5rem;
    }

    .answer-actions {
        display: flex;
        gap: 0.75rem;
        padding-top: 1rem;
        border-top: 1px solid #334155;
    }

    .ai-answer {
        border-color: #facc15;
        background: rgba(250, 204, 21, 0.1);
    }


    .btn {
        padding: 0.5rem 1rem;
        border-radius: 6px;
        font-weight: 600;
        border: none;
        cursor: pointer;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 0.9rem;
    }

    .btn-edit {
        background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
        color: white;
    }

        .btn-edit:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(245, 158, 11, 0.4);
        }

    .btn-delete {
        background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
        color: white;
    }

        .btn-delete:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(239, 68, 68, 0.4);
        }

    .btn-add {
        background: linear-gradient(135deg, #10b981 0%, #059669 100%);
        color: white;
        padding: 0.75rem 1.5rem;
        font-size: 1.05rem;
    }

        .btn-add:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(16, 185, 129, 0.4);
        }

    .btn-back {
        background: #334155;
        color: #cbd5e1;
        padding: 0.75rem 1.5rem;
        font-size: 1.05rem;
    }

        .btn-back:hover {
            background: #475569;
            color: #f1f5f9;
        }

    .empty-state {
        text-align: center;
        padding: 3rem 2rem;
        background: #1e293b;
        border: 2px dashed #334155;
        border-radius: 12px;
        color: #64748b;
    }

        .empty-state i {
            font-size: 3rem;
            margin-bottom: 1rem;
            opacity: 0.5;
        }

    .action-buttons {
        display: flex;
        gap: 1rem;
        margin-top: 3rem;
        justify-content: center;
    }
</style>

<div class="show-container">
    <div class="question-header">
        <h1 class="question-title">
            <i class="bi bi-question-circle-fill"></i>
            <span>@ViewBag.Question.Text</span>
        </h1>
    </div>

    <h2 class="section-header">
        <i class="bi bi-chat-dots-fill"></i>
        Răspunsuri (@(ViewBag.Answers?.Count ?? 0))
    </h2>

    @if (ViewBag.Answers != null && ViewBag.Answers.Count > 0)
    {
        @foreach (var answer in ViewBag.Answers)
        {
            bool isAI = answer.UserId == Guid.Empty;


            <div class="answer-item @(isAI ? "ai-answer" : "")">
                <div class="answer-text">
                    @answer.Text
                </div>

                <div class="answer-actions">
                    @if (!isAI)
                    {
                        <a href="/Answers/Edit/@answer.Id" class="btn btn-edit">
                            <i class="bi bi-pencil"></i> Editează
                        </a>

                        <form method="post" action="/Answers/Delete/@answer.Id" style="display: inline;">
                            <button type="submit" class="btn btn-delete"
                                    onclick="return confirm('Sigur vrei să ștergi acest răspuns?')">
                                <i class="bi bi-trash"></i> Șterge
                            </button>
                        </form>
                    }
                    @if (isAI)
                    {
                        <span class="badge bg-warning" style="margin-left: auto;">
                            🤖 AI
                        </span>
                    }
                </div>
            </div>
        }
    }
    else
    {
        <div class="empty-state">
            <i class="bi bi-inbox"></i>
            <h3>Nu există răspunsuri încă</h3>
            <p>Fii primul care răspunde la această întrebare!</p>
        </div>
    }

    <div class="action-buttons">
        <a href="/Answers/New?questionId=@ViewBag.Question.Id" class="btn btn-add">
            <i class="bi bi-plus-circle"></i> Adaugă răspuns
        </a>
        <a href="/Questions/Index" class="btn btn-back">
            <i class="bi bi-arrow-left"></i> Înapoi la întrebări
        </a>
    </div>
</div>