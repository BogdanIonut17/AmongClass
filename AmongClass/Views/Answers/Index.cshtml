@{
    ViewBag.Title = "Răspunsurile mele";
}

<style>
    .my-answers {
        max-width: 850px;
        margin: 2rem auto;
        padding: 0 1rem;
    }

    .header {
        margin-bottom: 2.5rem;
    }

    .back {
        display: inline-block;
        color: #60a5fa;
        text-decoration: none;
        font-size: 0.9rem;
        margin-bottom: 1rem;
    }

        .back:hover {
            color: #93c5fd;
        }

    h1 {
        color: #f1f5f9;
        font-size: 1.75rem;
        font-weight: 600;
        margin-bottom: 0.25rem;
    }

    .subtitle {
        color: #94a3b8;
        font-size: 0.9rem;
    }

    /* Fiecare răspuns - FOARTE SIMPLU */
    .item {
        margin-bottom: 3rem;
    }

    /* Întrebarea */
    .q-label {
        color: #64748b;
        font-size: 0.7rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 0.4rem;
    }

    .q-text {
        color: #f1f5f9;
        font-size: 1.25rem;
        font-weight: 600;
        line-height: 1.4;
        margin-bottom: 1.25rem;
    }

    /* Răspunsul */
    .a-text {
        color: #cbd5e1;
        font-size: 1rem;
        line-height: 1.6;
        margin-bottom: 0.75rem;
    }

    /* Link discret */
    .link {
        display: inline-block;
        color: #60a5fa;
        text-decoration: none;
        font-size: 0.85rem;
    }

        .link:hover {
            color: #93c5fd;
        }

    /* Separator */
    .separator {
        height: 1px;
        background: #334155;
        margin: 2.5rem 0;
    }

    .empty {
        text-align: center;
        padding: 3rem 1rem;
        color: #64748b;
    }
</style>

<div class="my-answers">
    <div class="header">
        <a href="/Questions/Index" class="back">← Înapoi la întrebări</a>
        <h1>Răspunsurile mele</h1>
        <p class="subtitle">Răspunsurile date în sesiuni live</p>
    </div>

    @if (ViewBag.Answers != null && ((IEnumerable<dynamic>)ViewBag.Answers).Any())
    {
        var answersList = ((IEnumerable<dynamic>)ViewBag.Answers).ToList();
        for (int i = 0; i < answersList.Count; i++)
        {
            var answer = answersList[i];

            <div class="item">
                <div class="q-label">ÎNTREBARE</div>
                <div class="q-text">@answer.Question.Text</div>

                <div class="a-text">@answer.Text</div>

                <a href="/Questions/Show/@answer.QuestionId" class="link">
                    Vezi detalii →
                </a>
            </div>

            @if (i < answersList.Count - 1)
            {
                <div class="separator"></div>
            }
        }
    }
    else
    {
        <div class="empty">
            <p>Nu ai răspuns la nicio întrebare încă</p>
        </div>
    }
</div>
