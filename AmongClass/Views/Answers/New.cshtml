@{
    ViewBag.Title = "Adaugă răspuns";
}

<style>
    .answer-form {
        background: #1e293b;
        border: 2px solid #334155;
        border-radius: 16px;
        padding: 2rem;
        max-width: 900px;
        margin: 0 auto;
    }

        .answer-form h2 {
            color: #f1f5f9;
            margin-bottom: 2rem;
        }

    .custom-textarea-answer {
        background: #0f172a;
        border: 2px solid #334155;
        border-radius: 12px;
        color: #f1f5f9;
        padding: 1.25rem;
        width: 100%;
        font-size: 1.15rem;
        min-height: 200px;
        transition: all 0.3s ease;
    }

        .custom-textarea-answer:focus {
            outline: none;
            border-color: #3b82f6;
            box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.2);
            background: #1e293b;
        }

        .custom-textarea-answer::placeholder {
            color: #64748b;
        }

    .warning-box {
        background: rgba(239, 68, 68, 0.1);
        border: 2px solid #ef4444;
        border-radius: 12px;
        padding: 1.25rem;
        margin-bottom: 1.5rem;
        color: #fecaca;
    }

        .warning-box h5 {
            color: #f87171;
            margin-bottom: 0.5rem;
        }
</style>

<a href="/Questions/Show/@ViewBag.QuestionId" class="btn btn-secondary mb-4">
    <i class="bi bi-arrow-left"></i> Înapoi
</a>

<div class="answer-form">
    <div class="warning-box">
        <h5>⚠️ Atenție!</h5>
        <p class="mb-0">Colegii tăi vor încerca să ghicească dacă răspunsul tău este generat de AI. Fii creativ!</p>
    </div>

    <h2><i class="bi bi-pencil-fill"></i> Scrie răspunsul tău</h2>

    <form method="post" action="/Answers/New">
        <input type="hidden" name="QuestionId" value="@ViewBag.QuestionId" />

        <textarea name="Text" class="custom-textarea-answer" placeholder="Scrie răspunsul aici..." required></textarea>

        <div class="d-flex gap-3 mt-4">
            <button type="submit" class="btn btn-success btn-lg flex-grow-1">
                <i class="bi bi-send-fill"></i> Trimite
            </button>
            <a href="/Questions/Show/@ViewBag.QuestionId" class="btn btn-secondary btn-lg">
                <i class="bi bi-x-circle"></i> Anulează
            </a>
        </div>
    </form>
</div>