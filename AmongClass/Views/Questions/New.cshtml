@{
    ViewBag.Title = "Adaugă întrebare";
}

<style>
    .form-card {
        background: #1e293b;
        border: 2px solid #334155;
        border-radius: 16px;
        padding: 2rem;
        max-width: 800px;
        margin: 0 auto;
    }

        .form-card h1 {
            color: #f1f5f9;
            margin-bottom: 2rem;
        }

        .form-card label {
            color: #e2e8f0;
            font-weight: 600;
            margin-bottom: 0.75rem;
            display: block;
        }

    .custom-textarea {
        background: #0f172a;
        border: 2px solid #334155;
        border-radius: 12px;
        color: #f1f5f9;
        padding: 1rem;
        width: 100%;
        font-size: 1.1rem;
        min-height: 150px;
        transition: all 0.3s ease;
    }

        .custom-textarea:focus {
            outline: none;
            border-color: #3b82f6;
            box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.2);
            background: #1e293b;
        }

        .custom-textarea::placeholder {
            color: #64748b;
        }
</style>

<div class="form-card">
    <h1><i class="bi bi-plus-circle-fill"></i> Adaugă întrebare</h1>

    <form method="post" action="/Questions/New">
        <div class="mb-4">
            <label>Întrebarea ta</label>
            <textarea name="Text" class="custom-textarea" placeholder="Scrie întrebarea aici..." required></textarea>
        </div>

        <div class="d-flex gap-3">
            <button type="submit" class="btn btn-success flex-grow-1">
                <i class="bi bi-check-circle-fill"></i> Creează
            </button>
            <a href="/Questions/Index" class="btn btn-secondary">
                <i class="bi bi-x-circle"></i> Anulează
            </a>
        </div>
    </form>
</div>