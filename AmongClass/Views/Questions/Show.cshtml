@model AmongClass.Models.Question

@{
    ViewBag.Title = "Quiz";
    bool hasVoted = ViewBag.UserVote != null;
}

<style>
    .quiz-header {
        background: linear-gradient(135deg, #1e293b 0%, #334155 100%);
        border: 2px solid #475569;
        border-radius: 20px;
        padding: 2rem;
        margin-bottom: 2rem;
    }

    .answer-card {
        background: #1e293b;
        border: 2px solid #334155;
        border-radius: 16px;
        padding: 1.5rem;
        margin-bottom: 1.5rem;
        transition: all 0.3s ease;
    }

        .answer-card:hover {
            transform: translateY(-3px);
            border-color: #3b82f6;
            box-shadow: 0 8px 25px rgba(59, 130, 246, 0.3);
        }

        .answer-card.voted {
            border-color: #ef4444;
            background: rgba(239, 68, 68, 0.1);
        }

    .vote-btn {
        background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
        border: none;
        border-radius: 12px;
        padding: 0.75rem 1.5rem;
        color: white;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
    }

        .vote-btn:hover:not(:disabled) {
            transform: scale(1.05);
            box-shadow: 0 5px 20px rgba(239, 68, 68, 0.4);
        }

        .vote-btn:disabled {
            background: #475569;
            cursor: not-allowed;
        }

    .vote-count {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        background: rgba(239, 68, 68, 0.2);
        border: 2px solid #ef4444;
        border-radius: 20px;
        padding: 0.5rem 1rem;
        font-weight: 700;
        color: #fecaca;
    }

    .quiz-header h1 {
        color: #f1f5f9;
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 1rem;
    }

    .answer-card div {
        color: #e2e8f0;
    }

    .info-box {
        background: rgba(59, 130, 246, 0.1);
        border-left: 4px solid #3b82f6;
        padding: 1rem 1.5rem;
        border-radius: 8px;
        margin-bottom: 2rem;
        color: #e2e8f0;
    }

        .info-box h5 {
            color: #60a5fa;
        }
</style>

<a href="/Questions/Index" class="btn btn-secondary mb-4">
    <i class="bi bi-arrow-left"></i> Înapoi
</a>

<div class="quiz-header">
    <h1>@ViewBag.Question.Text</h1>
    <div>
        <span class="badge bg-info">@ViewBag.Answers.Count răspunsuri</span>
    </div>
</div>

@if (!hasVoted && User.Identity.IsAuthenticated)
{
    <div class="info-box">
        <h5><i class="bi bi-info-circle-fill"></i> Găsește AI-ul!</h5>
        <p class="mb-0">Votează răspunsul care crezi că este generat de AI. Dacă ghicești corect, primești +10 puncte!</p>
    </div>
}

@if (ViewBag.Answers != null && ViewBag.Answers.Count > 0)
{
    <h4 class="mb-4" style="color: #f1f5f9;">
        <i class="bi bi-collection"></i> Răspunsuri
        @if (hasVoted)
        {
            <span class="ms-2 badge bg-danger">Ai votat deja</span>
        }
    </h4>

    @foreach (var answer in ViewBag.Answers)
    {
        int voteCount = answer.Votes?.Count ?? 0;
        bool isUserAnswer = User.Identity.IsAuthenticated && answer.UserId.ToString() == User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
        bool isVotedAnswer = hasVoted && ViewBag.UserVote.AnswerId == answer.Id;

        <div class="answer-card @(isVotedAnswer ? "voted" : "")">
            <div class="mb-3">
                @if (isUserAnswer)
                {
                    <span class="badge bg-info me-2">
                        <i class="bi bi-person-fill"></i> Răspunsul tău
                    </span>
                }
                @if (voteCount > 0)
                {
                    <span class="vote-count">
                        <i class="bi bi-robot"></i>
                        <span>@voteCount voturi AI</span>
                    </span>
                }
            </div>

            <div style="font-size: 1.1rem; margin-bottom: 1rem; color: #f1f5f9;">
                @answer.Text
            </div>

            <div class="d-flex justify-content-between">
                <div>
                    @if (User.IsInRole("Teacher") || isUserAnswer)
                    {
                        <a class="btn btn-sm btn-warning" href="/Answers/Edit/@answer.Id">
                            <i class="bi bi-pencil"></i> Editează
                        </a>
                        <form method="post" action="/Answers/Delete/@answer.Id" style="display: inline;">
                            <button class="btn btn-sm btn-danger" type="submit">
                                <i class="bi bi-trash"></i> Șterge
                            </button>
                        </form>
                    }
                </div>
                <div>
                    @if (User.Identity.IsAuthenticated && !isUserAnswer)
                    {
                        <form method="post" action="/Votes/Vote" style="display: inline;">
                            <input type="hidden" name="answerId" value="@answer.Id" />
                            <button type="submit" class="vote-btn" @(hasVoted ? "disabled" : "")>
                                🤖 @(isVotedAnswer ? "Votat" : "Votează ca AI")
                            </button>
                        </form>
                    }
                </div>
            </div>
        </div>
    }
}
else
{
    <p class="text-light">Nu există răspunsuri încă.</p>
}

@if (User.Identity.IsAuthenticated)
{
    <div class="text-center mt-4">
        <a class="btn btn-success btn-lg" href="/Answers/New?questionId=@ViewBag.Question.Id">
            <i class="bi bi-plus-circle-fill"></i> Adaugă răspunsul tău
        </a>
    </div>
}