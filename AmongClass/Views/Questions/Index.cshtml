@{
    ViewBag.Title = "Index";
}

<h2 class="text-center">Afisare intrebari</h2>
<br />

<div class="d-flex justify-content-center">

    <a class="btn btn-outline-success" href="/Answers/Index">Afisare raspunsuri</a>
    <br />
    <a class="btn btn-outline-success" href="/Questions/New">Adauga intrebare</a>
    <br />

</div>

<br />


@foreach (var q in ViewBag.Questions)
{
    <div class="card">

        <div class="card-body">

            <div class="card-text">@q.Text</div>

            <div class="d-flex justify-content-between flex-row mt-5">

                @foreach (var a in q.Answers)
                {
                    <div><i class="bi bi-globe"></i>@a.Text</div>
                }

                <a class="btn btn-success" href="/Questions/Show/@q.Id">Afisare intrebare</a>

            </div>

        </div>

    </div>

    <br />
    <br />
}