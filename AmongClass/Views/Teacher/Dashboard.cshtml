@page
@model AmongClass.Views.Teacher.DashboardModel
@{
	@model IEnumerable<YourNamespace.Models.Session>

@{
    ViewData["Title"] = "Teacher Dashboard";
    Layout = "_ViewLayout"; // sau "_ViewImports.cshtml" dacă folosești layout-ul standard
}

<div class="container">
    <h1>Dashboard Profesor</h1>
    
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h3>Sesiuni Active</h3>
                    <a asp-action="Create" asp-controller="Teacher" class="btn btn-primary">
                        Creează Sesiune Nouă
                    </a>
                </div>
                <div class="card-body">
                    @if (Model != null && Model.Any())
                    {
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Cod Sesiune</th>
                                    <th>Status</th>
                                    <th>Data Creării</th>
                                    <th>Acțiuni</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var session in Model)
                                {
                                    <tr>
                                        <td>@session.SessionCode</td>
                                        <td>@session.Status</td>
                                        <td>@session.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                        <td>
                                            <a asp-action="SessionDetails" asp-route-id="@session.Id" class="btn btn-sm btn-info">
                                                Detalii
                                            </a>
                                            <a asp-action="Results" asp-route-id="@session.Id" class="btn btn-sm btn-success">
                                                Rezultate
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p class="text-muted">Nu există sesiuni active momentan.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
}
