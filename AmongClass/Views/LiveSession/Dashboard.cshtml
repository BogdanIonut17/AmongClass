@model AmongClass.Models.Session

@{
    ViewBag.Title = "Dashboard Live";
}

<style>
    .dashboard-container {
        max-width: 1600px;
        margin: 1rem auto;
        padding: 0 1rem;
    }

    .dashboard-header {
        background: linear-gradient(135deg, #10b981 0%, #059669 100%);
        border-radius: 16px;
        padding: 1.5rem 2rem;
        margin-bottom: 2rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .live-badge {
        background: #ef4444;
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 20px;
        font-weight: 700;
        animation: pulse 2s infinite;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }

    @@keyframes pulse {
        0%, 100% {
            opacity: 1;
        }

        50% {
            opacity: 0.7;
        }
    }

    .session-info-bar {
        display: flex;
        gap: 2rem;
        align-items: center;
        color: white;
    }

    .info-stat {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 1.1rem;
        font-weight: 600;
    }

    .grid-layout {
        display: grid;
        grid-template-columns: 2fr 1fr;
        gap: 2rem;
    }

    @@media (max-width: 1200px) {
        .grid-layout {
            grid-template-columns: 1fr;
        }
    }

    .panel {
        background: #1e293b;
        border: 2px solid #334155;
        border-radius: 16px;
        padding: 2rem;
    }

    .panel-title {
        color: #f1f5f9;
        font-size: 1.5rem;
        font-weight: 700;
        margin-bottom: 1.5rem;
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .question-card {
        background: #0f172a;
        border: 2px solid #334155;
        border-radius: 12px;
        padding: 1.5rem;
        margin-bottom: 1rem;
        transition: all 0.3s ease;
    }

        .question-card.active {
            border-color: #10b981;
            background: rgba(16, 185, 129, 0.05);
        }

        .question-card.completed {
            opacity: 0.6;
            border-color: #475569;
        }

    .question-title {
        color: #f1f5f9;
        font-size: 1.2rem;
        margin-bottom: 1rem;
    }

    .question-meta {
        display: flex;
        justify-content: space-between;
        align-items: center;
        color: #94a3b8;
        font-size: 0.9rem;
        margin-bottom: 1rem;
    }

    .btn {
        padding: 0.5rem 1rem;
        border-radius: 8px;
        font-weight: 600;
        border: none;
        cursor: pointer;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }

    .btn-activate {
        background: linear-gradient(135deg, #10b981 0%, #059669 100%);
        color: white;
    }

        .btn-activate:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(16, 185, 129, 0.4);
        }

    .btn-danger {
        background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
        color: white;
        padding: 0.75rem 1.5rem;
        font-size: 1.05rem;
    }

    .student-item {
        background: #0f172a;
        border: 2px solid #334155;
        border-radius: 8px;
        padding: 1rem;
        margin-bottom: 0.75rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .student-name {
        color: #e2e8f0;
        font-weight: 600;
    }

    .student-score {
        background: #3b82f6;
        color: white;
        padding: 0.25rem 0.75rem;
        border-radius: 20px;
        font-weight: 700;
    }

    .answers-panel {
        max-height: 500px;
        overflow-y: auto;
    }

    .answer-item {
        background: #0f172a;
        border: 2px solid #334155;
        border-radius: 8px;
        padding: 1rem;
        margin-bottom: 0.75rem;
    }

    .answer-text {
        color: #e2e8f0;
        margin-bottom: 0.5rem;
    }

    .answer-meta {
        display: flex;
        justify-content: space-between;
        align-items: center;
        color: #94a3b8;
        font-size: 0.85rem;
    }

    .votes-badge {
        background: #ef4444;
        color: white;
        padding: 0.25rem 0.5rem;
        border-radius: 12px;
        font-weight: 700;
    }

    .empty-state {
        text-align: center;
        padding: 2rem;
        color: #64748b;
    }

        .empty-state i {
            font-size: 2rem;
            margin-bottom: 0.5rem;
            opacity: 0.5;
        }

    .control-buttons {
        display: flex;
        gap: 1rem;
        margin-top: 2rem;
        justify-content: center;
    }
</style>

@{
    ViewBag.Title = $"Dashboard - {Model.Name}";
    var currentQuestion = ViewBag.CurrentQuestion as Question;
    var scores = ViewBag.Scores as List<Score>;
}

<div class="dashboard-container">
    <div class="page-header text-center">
        <h1 class="page-title"><i class="bi bi-bar-chart-line-fill"></i> Dashboard: @Model.Name</h1>
        <a href="/LiveSession/Index" class="btn btn-secondary-modern">
            <i class="bi bi-arrow-left"></i> Înapoi la Sesiuni
        </a>
    </div>

    <div class="header-info row align-items-center">
        <div class="col-md-6 mb-3 mb-md-0">
            <p class="text-secondary mb-1">Codul de Join al Sesiunii:</p>
            <div class="code-display">@Model.JoinCode</div>
            <p class="mt-2 text-white-50">Sesiunea este 🟢 **Activă**.</p>
        </div>
        <div class="col-md-6 text-md-end">
             <form method="post" action="/LiveSession/EndSession/@Model.Id" onsubmit="return confirm('Sigur vrei să închei sesiunea?')" style="display: inline-block;">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-danger btn-lg">
                    <i class="bi bi-stop-fill"></i>
                    Încheie Sesiunea
                </button>
            </form>
        </div>
    </div>

    <div class="row">
        @* Coloana 1: Întrebarea Curentă și Răspunsurile *@
        <div class="col-lg-6">
            <div class="card-live">
                <h3 class="text-primary"><i class="bi bi-patch-question-fill"></i> Întrebarea Curentă</h3>
                
                @if (currentQuestion != null)
                {
                    <h4 class="text-white">@currentQuestion.Text</h4>
                    <hr style="border-top: 1px solid #334155;">
                    
                    <h5 class="text-secondary">Răspunsuri (Live, @(currentQuestion.Answers?.Count() ?? 0) total):</h5>
                    
                    @if (currentQuestion.Answers != null && currentQuestion.Answers.Any())
                    {
                        <ul class="list-unstyled">
                            @foreach (var answer in currentQuestion.Answers.OrderByDescending(a => a.Votes.Count))
                            {
                                <li class="text-white mb-2 p-2 border rounded" style="border-color: #475569 !important;">
                                    <strong>@answer.User.UserName</strong>: 
                                    @(answer.Text.Length > 40 ? answer.Text.Substring(0, 40) + "..." : answer.Text)
                                    <span class="badge bg-secondary ms-2">Voturi: @answer.Votes.Count</span>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-warning">Încă nu s-au trimis răspunsuri la această întrebare.</p>
                    }
                    
                    @* Acțiuni pentru profesor (ex: Treci la următoarea întrebare) *@
                    <div class="mt-3">
                        <a href="#" class="btn btn-warning disabled" title="Implementare necesară">
                            <i class="bi bi-arrow-right-circle-fill"></i> Treci la Următoarea
                        </a>
                    </div>
                }
                else
                {
                    <p class="text-secondary">Nicio întrebare activă. Sesiunea este pregătită.</p>
                }
            </div>
        </div>

        @* Coloana 2: Clasament Live *@
        <div class="col-lg-6">
            <div class="card-live">
                <h3 class="text-success"><i class="bi bi-trophy-fill"></i> Clasament Live</h3>
                <ul class="score-list">
                    @if (scores != null && scores.Any())
                    {
                        for (int i = 0; i < scores.Count; i++)
                        {
                            var score = scores[i];
                            <li class="score-item">
                                <span class="score-rank">@(i + 1).</span>
                                <span style="flex-grow: 1;">
                                    @score.Student.UserName 
                                </span>
                                <span class="score-points">@score.Points Puncte</span>
                            </li>
                        }
                    }
                    else
                    {
                        <p class="text-secondary">Niciun student în sesiune încă.</p>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>
