@model IEnumerable<AmongClass.Models.Session>

@{
    ViewBag.Title = "Sesiuni Live";
}

<style>
    .sessions-container {
        max-width: 1400px;
        margin: 2rem auto;
        padding: 0 1rem;
    }

    .page-header {
        text-align: center;
        margin-bottom: 3rem;
    }

    .page-title {
        color: #f1f5f9;
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 1rem;
    }

    .create-btn {
        background: linear-gradient(135deg, #10b981 0%, #059669 100%);
        color: white;
        padding: 1rem 2rem;
        border-radius: 12px;
        text-decoration: none;
        font-weight: 600;
        font-size: 1.1rem;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        transition: all 0.3s ease;
        border: none;
    }

        .create-btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(16, 185, 129, 0.4);
        }

    .session-card {
        background: #1e293b;
        border: 2px solid #334155;
        border-radius: 16px;
        padding: 2rem;
        margin-bottom: 1.5rem;
        transition: all 0.3s ease;
    }

        .session-card:hover {
            border-color: #3b82f6;
            box-shadow: 0 5px 20px rgba(59, 130, 246, 0.2);
        }

    .session-header {
        display: flex;
        justify-content: space-between;
        align-items: start;
        margin-bottom: 1.5rem;
    }

    .session-title {
        color: #f1f5f9;
        font-size: 1.75rem;
        font-weight: 700;
        margin: 0;
    }

    .session-status {
        padding: 0.5rem 1rem;
        border-radius: 20px;
        font-weight: 600;
        font-size: 0.9rem;
    }

    .status-active {
        background: rgba(16, 185, 129, 0.2);
        color: #10b981;
        border: 2px solid #10b981;
    }

    .status-inactive {
        background: rgba(100, 116, 139, 0.2);
        color: #94a3b8;
        border: 2px solid #475569;
    }

    .status-completed {
        background: rgba(239, 68, 68, 0.2);
        color: #ef4444;
        border: 2px solid #ef4444;
    }

    .session-info {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1.5rem;
        margin-bottom: 1.5rem;
    }

    .info-item {
        background: #0f172a;
        padding: 1rem;
        border-radius: 12px;
        border-left: 4px solid #3b82f6;
    }

    .info-label {
        color: #94a3b8;
        font-size: 0.85rem;
        margin-bottom: 0.5rem;
    }

    .info-value {
        color: #f1f5f9;
        font-size: 1.5rem;
        font-weight: 700;
    }

    .join-code {
        font-family: 'Courier New', monospace;
        letter-spacing: 3px;
    }

    .session-actions {
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
    }

    .btn {
        padding: 0.75rem 1.5rem;
        border-radius: 8px;
        font-weight: 600;
        border: none;
        cursor: pointer;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }

    .btn-primary {
        background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
        color: white;
    }

    .btn-success {
        background: linear-gradient(135deg, #10b981 0%, #059669 100%);
        color: white;
    }

    .btn-warning {
        background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
        color: white;
    }

    .btn-danger {
        background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
        color: white;
    }

    .btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(59, 130, 246, 0.4);
    }

    .empty-state {
        text-align: center;
        padding: 4rem 2rem;
        color: #64748b;
    }

        .empty-state i {
            font-size: 4rem;
            margin-bottom: 1rem;
            opacity: 0.5;
        }
</style>

<div class="sessions-container">
    <div class="page-header">
        <h1 class="page-title">
            <i class="bi bi-broadcast"></i>
            Sesiuni Live
        </h1>
        <a href="/LiveSession/Create" class="create-btn">
            <i class="bi bi-plus-circle-fill"></i>
            Creează o sesiune nouă
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    @if (Model != null && Model.Any())
    {
        @foreach (var session in Model)
        {
            <div class="session-card">
                <div class="session-header">
                    <h2 class="session-title">@session.Name</h2>
                    <span class="session-status @(session.Status == AmongClass.Models.SessionStatus.Active ? "status-active" : session.Status == AmongClass.Models.SessionStatus.Completed ? "status-completed" : "status-inactive")">
                        @(session.Status == AmongClass.Models.SessionStatus.Active ? "🟢 LIVE" : session.Status == AmongClass.Models.SessionStatus.Completed ? "🔴 Încheiată" : "⚪ Inactivă")
                    </span>
                </div>

                <div class="session-info">
                    <div class="info-item">
                        <div class="info-label">Cod Join</div>
                        <div class="info-value join-code">@session.JoinCode</div>
                    </div>
                    <div class="info-item">
                        <div class="info-label">Studenți</div>
                        <div class="info-value">@session.SessionStudents.Count</div>
                    </div>
                    <div class="info-item">
                        <div class="info-label">Întrebări</div>
                        <div class="info-value">@session.SessionQuestions.Count</div>
                    </div>
                    <div class="info-item">
                        <div class="info-label">Creată</div>
                        <div class="info-value" style="font-size: 1.1rem;">@session.CreatedAt.ToString("dd MMM yyyy")</div>
                    </div>
                </div>

                <div class="session-actions">
                    @if (session.Status == AmongClass.Models.SessionStatus.Inactive)
                    {
                        <a href="/LiveSession/Setup/@session.Id" class="btn btn-warning">
                            <i class="bi bi-gear-fill"></i>
                            Configurează
                        </a>
                        <form method="post" action="/LiveSession/StartSession/@session.Id" style="display: inline;">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-play-fill"></i>
                                Start sesiune
                            </button>
                        </form>
                    }
                    else if (session.Status == AmongClass.Models.SessionStatus.Active)
                    {
                        <a href="/LiveSession/Dashboard/@session.Id" class="btn btn-primary">
                            <i class="bi bi-speedometer2"></i>
                            Dashboard live
                        </a>
                        <form method="post" action="/LiveSession/EndSession/@session.Id" style="display: inline;">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-stop-fill"></i>
                                Încheie sesiunea
                            </button>
                        </form>
                    }
                    else
                    {
                        <a href="/LiveSession/Results/@session.Id" class="btn btn-primary">
                            <i class="bi bi-trophy-fill"></i>
                            Vezi rezultate
                        </a>
                    }

                    @if (session.Status != AmongClass.Models.SessionStatus.Active)
                    {
                        <form method="post" action="/LiveSession/Delete/@session.Id" style="display: inline;">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Șterge
                            </button>
                        </form>
                    }
                </div>
            </div>
        }
    }
    else
    {
        <div class="empty-state">
            <i class="bi bi-broadcast"></i>
            <h3>Nu ai sesiuni live încă</h3>
            <p>Creează prima ta sesiune interactivă!</p>
        </div>
    }
</div>
